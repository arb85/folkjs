{
  "name": "@folkjs/website",
  "version": "0.0.7",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "live": "node --experimental-strip-types live-2025/build.ts",
    "dev": "wireit",
    "dev:host": "npm run dev -- --host",
    "preview": "npm run build && vite preview"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty && vite build",
      "dependencies": [
        "../packages/canvas:build",
        "../packages/dom:build",
        "../packages/geometry:build",
        "../packages/labs:build"
      ],
      "files": [
        "index.html",
        "**/*.html",
        "**/*.ts",
        "**/*.md",
        "**/*.css",
        "public/**",
        "package.json",
        "tsconfig.json",
        "vite.config.ts",
        "__scripts__/**"
      ],
      "output": [
        "dist/**",
        "tsconfig.tsbuildinfo"
      ]
    },
    "dev": {
      "command": "vite --host",
      "service": true,
      "dependencies": [
        {
          "script": "../packages/geometry:build",
          "cascade": false
        },
        {
          "script": "../packages/dom:build",
          "cascade": false
        },
        {
          "script": "../packages/canvas:build",
          "cascade": false
        },
        {
          "script": "../packages/labs:build",
          "cascade": false
        }
      ],
      "files": [
        "package.json",
        "tsconfig.json",
        "vite.config.ts",
        "__scripts__/**"
      ]
    }
  },
  "dependencies": {
    "@folkjs/canvas": "^0.0.7",
    "@folkjs/dom": "^0.0.7",
    "@folkjs/geometry": "^0.0.7",
    "@folkjs/labs": "^0.0.7",
    "@retorquere/bibtex-parser": "^9.0.21",
    "gray-matter": "^4.0.3",
    "ink-mde": "^0.34.0",
    "marked": "^12.0.2",
    "marked-footnote": "^1.4.0",
    "marked-katex-extension": "^5.1.5",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "remark-wiki-link": "^2.0.1",
    "unified": "^11.0.5",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-plugin-wasm": "^3.3.0"
  },
  "devDependencies": {
    "@types/leaflet": "^1.9.14",
    "@types/node": "^22.10.1",
    "@types/wicg-file-system-access": "^2023.10.5",
    "typescript": "^5.8.2",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-mkcert": "^1.17.6"
  }
}
