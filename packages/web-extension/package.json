{
  "name": "@folkjs/web-extension",
  "version": "0.0.0",
  "description": "Folk Canvas web extension",
  "keywords": [
    "web extension"
  ],
  "author": "Christopher Shank <chris.shank.23@gmail.com>",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build --watch",
    "build": "wireit",
    "test": "echo 'No tests to run'"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty && vite build",
      "clean": "if-file-deleted",
      "files": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "manifest.json",
        "options.html",
        "images/**"
      ],
      "output": [
        "dist/**",
        "tsconfig.tsbuildinfo"
      ]
    }
  },
  "dependencies": {
    "@folkjs/canvas": "^0.0.1",
    "@folkjs/geometry": "^0.0.1",
    "@folkjs/labs": "^0.0.1"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "vite": "^6.0.3",
    "@types/chrome": "^0.0.310"
  }
}
