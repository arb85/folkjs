{
  "name": "FolkJS",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "src/background.ts"
  },
  "action": {
    "default_icon": {
      "32": "/icon32.png"
    },
    "default_title": "folkjs"
  },

  "web_accessible_resources": [
    {
      "resources": ["src/injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
