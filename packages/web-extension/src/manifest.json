{
  "name": "FolkJS",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["scripting", "storage"],
  "action": {
    "default_icon": {
      "32": "/icon32.png"
    },
    "default_title": "folkjs",
    "default_popup": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content-script.ts"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/injected/canvasify.js"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["src/injected/copy-and-paste.js"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["src/injected/presence.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
