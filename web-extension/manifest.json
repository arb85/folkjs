{
  "name": "Folk Canvas",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "dist/background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/injected.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Add Folk Canvas"
  }
}
